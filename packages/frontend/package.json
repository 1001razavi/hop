{
  "name": "@hop-protocol/frontend",
  "version": "0.0.0",
  "description": "Hop Protocol Frontend",
  "author": "Authereum Labs, Inc.",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf node_modules build ./tsconfig.tsbuildinfo",
    "start": "NODE_OPTIONS=--openssl-legacy-provider SKIP_PREFLIGHT_CHECK=true REACT_APP_GIT_SHA=`git rev-parse --short HEAD` react-app-rewired start",
    "dev": "BROWSER=none npm start",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "build": "NODE_OPTIONS=--openssl-legacy-provider SKIP_PREFLIGHT_CHECK=true REACT_APP_GIT_SHA=`git rev-parse --short HEAD` INLINE_RUNTIME_CHUNK=false react-app-rewired --max_old_space_size=4096 build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "deploy": "npx --yes netlify-cli deploy --prod",
    "deploy:ipfs": "npx --yes ipfs-deploy -p infura build --no-open --no-clipboard",
    "deploy:local": "git stash && yarn clean && yarn build && yarn deploy"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
