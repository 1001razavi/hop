{
  "name": "@hop-protocol/sdk",
  "version": "0.0.1-beta.625",
  "description": "The Hop Protocol JavaScript SDK",
  "author": "Authereum Labs, Inc.",
  "license": "MIT",
  "files": [
    "dist",
    "hop.js",
    "abi",
    "addresses",
    "config",
    "contracts",
    "metadata",
    "networks",
    "s3upload"
  ],
  "scripts": {
    "clean": "rm -rf node_modules dist ./tsconfig.tsbuildinfo hop.js ./abi ./addresses ./config ./contracts ./metadata ./networks",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "dev": "pnpm version && tsc --watch",
    "build": "pnpm version && pnpm build:all",
    "build:ts": "tsc",
    "build:esm": "cp scripts/cjs_abi_index.ts src/abi/index.ts && tsc -p tsconfig.esm.json && echo '{\"type\": \"module\", \"imports\": { \"#*\": \"./*\" }}' > dist/esm/package.json && npx --yes fix-esm-import-path dist/esm/contracts/ && sh ./scripts/update_exports.sh && cp scripts/esm_abi_index.ts dist/esm/abi/index.js",
    "build:cjs": "cp scripts/cjs_abi_index.ts src/abi/index.ts && tsc -p tsconfig.cjs.json && echo '{\"type\": \"commonjs\", \"imports\": { \"#*\": \"./*\" }}' > dist/cjs/package.json",
    "build:all": "pnpm build:typechain && pnpm build:esm && pnpm build:cjs && pnpm build:toplevel && pnpm build:browser",
    "build:browser": "esbuild dist/cjs/index.js --bundle --minify --platform=browser --outfile=hop.js",
    "build:toplevel": "bash -c 'cp -r ./dist/cjs/{abi,addresses,config,contracts,metadata,networks} ./'",
    "build:typechain": "typechain --target=ethers-v5 --out-dir=./src/contracts ./src/abi/**/*.json && sh ./scripts/ts-nocheck.sh",
    "clean:docs": "rm -rf docs",
    "clean:docs-ui": "rm -rf docs-ui",
    "lint": "eslint . --config ./eslint.config.mjs --fix",
    "version": "echo \"export default '$(cat package.json | jq -r '.version')'\" > src/version.ts",
    "bump": "pnpm version prerelease --preid=beta",
    "release": "pnpm build && pnpm lint && pnpm test && pnpm bump",
    "bump-release": "pnpm bump && pnpm release",
    "docs:markdown": "typedoc --plugin typedoc-plugin-markdown --theme markdown --hideGenerator --excludeExternals --excludePrivate --disableSources --hideBreadcrumbs --namedAnchors --out docs src/index.ts",
    "docs:concat": "typedoc --plugin typedoc-plugin-markdown --theme markdown --hideGenerator --excludeExternals --excludePrivate --disableSources --hideBreadcrumbs --namedAnchors --out docs src/index.ts && pnpm dlx concat-md --toc --decrease-title-levels --dir-name-as-title docs > docs/README.md",
    "docs:ui": "typedoc --out docs-ui src/index.ts",
    "docs": "pnpm docs:ui && pnpm docs:markdown",
    "docs:update-gitbook": "./scripts/update_gitbook.sh"
  },
  "dependencies": {
    "@hop-protocol/sdk-core": "workspace:*",
    "buffer": "6.0.3",
    "dotenv": "16.4.1",
    "esbuild": "0.20.0",
    "ethereum-block-by-date": "1.4.9",
    "ethers": "5.7.2",
    "eventemitter3": "5.0.1",
    "fast-memoize": "2.5.2",
    "luxon": "3.4.4",
    "merkletreejs": "0.3.11"
  },
  "devDependencies": {
    "@types/luxon": "3.4.2",
    "jest": "29.7.0",
    "ts-jest": "29.1.2",
    "typedoc": "0.25.7",
    "typedoc-plugin-markdown": "3.17.1",
    "@typechain/ethers-v5": "10.1.0",
    "typechain": "8.1.0"
  },
  "peerDependencies": {
    "ethers": "^5"
  },
  "imports": {
    "#*": "./dist/esm/*"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./config": {
      "import": "./dist/esm/config/index.js",
      "types": "./dist/cjs/config/index.d.ts",
      "default": "./dist/cjs/config/index.js"
    },
    "./abi": {
      "types": "./dist/cjs/abi/index.d.ts",
      "import": "./dist/esm/abi/index.js",
      "default": "./dist/cjs/abi/index.js"
    },
    "./addresses": {
      "types": "./dist/cjs/addresses/index.d.ts",
      "import": "./dist/esm/addresses/index.js",
      "default": "./dist/cjs/addresses/index.js"
    },
    "./contracts": {
      "types": "./dist/cjs/contracts/index.d.ts",
      "import": "./dist/esm/contracts/index.js",
      "default": "./dist/cjs/contracts/index.js"
    },
    "./contracts/*": {
      "types": "./dist/cjs/contracts/*.d.ts",
      "import": "./dist/esm/contracts/*.js",
      "default": "./dist/cjs/contracts/*.js"
    },
    "./metadata": {
      "types": "./dist/cjs/metadata/index.d.ts",
      "import": "./dist/esm/metadata/index.js",
      "default": "./dist/cjs/metadata/index.js"
    },
    "./metadata/tokens": {
      "types": "./dist/cjs/metadata/index.d.ts",
      "import": "./dist/esm/metadata/tokens.js",
      "default": "./dist/cjs/metadata/tokens.js"
    },
    "./networks": {
      "types": "./dist/cjs/networks/index.d.ts",
      "import": "./dist/esm/networks/index.js",
      "default": "./dist/cjs/networks/index.js"
    }
  }
}
