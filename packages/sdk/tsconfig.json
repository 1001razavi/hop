{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "composite": false,
    "declarationDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2017", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2017",
    "types": ["node", "jest"],
    "paths": {
      "@src/*": ["*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.test.ts"
  ]
}
