{
  "name": "@hop-protocol/core",
  "version": "0.0.1-beta.218",
  "description": "Hop Protocol networks config",
  "author": "Authereum Labs, Inc.",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "abi",
    "addresses",
    "config",
    "contracts",
    "metadata",
    "networks",
    "s3upload"
  ],
  "exports": {
    "./abi": {
      "types": "./dist/abi/index.d.ts",
      "import": "./dist/abi/index.js",
      "require": "./dist/cjs/abi/index.js"
    },
    "./addresses": {
      "types": "./dist/addresses/index.d.ts",
      "import": "./dist/addresses/index.js",
      "require": "./dist/cjs/addresses/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js",
      "require": "./dist/cjs/config/index.js"
    },
    "./contracts": {
      "types": "./dist/contracts/index.d.ts",
      "import": "./dist/contracts/index.js",
      "require": "./dist/cjs/contracts/index.js"
    },
    "./contracts/*": {
      "types": "./dist/contracts/*.d.ts",
      "import": "./dist/contracts/*.js",
      "require": "./dist/cjs/contracts/*.js"
    },
    "./metadata": {
      "types": "./dist/metadata/index.d.ts",
      "import": "./dist/metadata/index.js",
      "require": "./dist/cjs/metadata/index.js"
    },
    "./networks": {
      "types": "./dist/networks/index.d.ts",
      "import": "./dist/networks/index.js",
      "require": "./dist/cjs/networks/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf node_modules dist ./tsconfig.tsbuildinfo",
    "test": "jest test",
    "dev": "npm run version && tsc --watch",
    "build": "npm run version && npm run build:typechain && npm run build:ts && npm run build:cjs",
    "build:ts": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:typechain": "typechain --target=ethers-v5 --out-dir=./src/contracts ./src/abi/**/*.json && sh ./scripts/ts-nocheck.sh",
    "version": "echo \"export default '$(cat package.json | jq -r '.version')'\" > src/version.ts",
    "version:bump": "npm version prerelease --preid=beta",
    "lint": "eslint --fix \"src/**/*\"",
    "publish:latest": "npm publish --tag latest --access public",
    "publish:beta": "npm publish --tag beta --access public",
    "publish:next": "npm publish --tag next --access public",
    "dist-tag:latest": "npm dist-tag add \"@hop-protocol/core@$(jq -r .version <package.json)\" latest",
    "dist-tag:beta": "npm dist-tag add \"@hop-protocol/core@$(jq -r .version <package.json)\" beta",
    "dist-tag:next": "npm dist-tag add \"@hop-protocol/core@$(jq -r .version <package.json)\" next",
    "release": "npm run clean && npm test && npm run publish:latest",
    "bump": "npm run clean && npm run build && npm test && npm run json:mainnet && npm run version:bump",
    "bump-release": "npm run version:bump && npm run release && npm run json:mainnet",
    "prepublishOnly": "npm run lint && npm run build",
    "json:mainnet": "node -e \"console.log(JSON.stringify(require('./addresses').mainnet, null, 2))\" > build/addresses/mainnet.json",
    "upload": "npm run build && node s3upload/main"
  },
  "directories": {},
  "dependencies": {
    "ethers": "5.7.2"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "3.338.0",
    "@aws-sdk/types": "3.485.0",
    "@typechain/ethers-v5": "10.1.0",
    "dotenv": "10.0.0",
    "jest": "29.7.0",
    "ts-jest": "29.1.1",
    "typechain": "8.1.0"
  }
}
