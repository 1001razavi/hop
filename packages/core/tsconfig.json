{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2017", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": ".",
    "rootDir": "src",
    "sourceMap": false,
    "target": "es2015",
    "types": ["node", "jest"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/*",
    "src/**/*.ts",
    "src/**/*.json",
    "src/abi/*",
    "src/addresses/*",
    "src/contracts/*",
    "src/contracts/factories/*",
    "src/contracts/generated/*",
    "src/contracts/static/*",
    "src/metadata/*",
    "src/networks/*",
    "src/config",
    "src/s3upload/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*"
  ]
}
