{
  "_comment": "Base config inspired by the node16 base at https://github.com/tsconfig/bases/blob/main/bases/node16.json. Not imported for simplicity.",
  "compilerOptions": {
    // Base config
    "lib": ["es2021"],
    "module": "node16",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,

    // Custom
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitOverride": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,

    // Custom - remove over time as codebase is cleaned up
    "useUnknownInCatchVariables": false, // overwrites strcit `true`
    "strictPropertyInitialization": false, // overwrites strict `true`
    "skipLibCheck": true // resolves 25+ matic and aave type errors out of our control
  }
}
