{
  "env": {
    "es2021": true
  },
  "compilerOptions": {
    // Base config
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021"],
    "module": "node16",
    "moduleResolution": "node16",
    "target": "es2021",

    // Custom
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "sourceMap": true,

    // Custom - remove over time as codebase is cleaned up
    "strictPropertyInitialization": false, // overwrites strict `true`
    "useUnknownInCatchVariables": false // overwrites strcit `true`
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
