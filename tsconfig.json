{
  "env": {
    "es2021": true
  },
  "compilerOptions": {

   /**
    * Base config
    */

    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // nodenext and es2020 optimize for backwards compatability while
    // still allowing for new features, such as node's native fetch
    "module": "nodenext",
    "target": "es2020",

   /**
    * Custom config
    */

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "resolveJsonModule": true,
    "sourceMap": true,

   /**
    * Custom config - remove over time as codebase is cleaned up
    */

    "strictPropertyInitialization": false, // overwrites strict `true`
    "useUnknownInCatchVariables": false // overwrites strcit `true`

   /**
    * Explicitly define outDir and rootDir in each package since they
    * define package-specific dirs.
    */
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
